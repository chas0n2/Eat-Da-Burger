
    <h1>Unfinished Burgers</h1>
    <ul>
        {{#each burgers }}
        {{#unless devoured}}
        <li>
            <p>{{ this.id }}. {{ this.burger_name }}</p><button data-id="{{ this.id }}"
                class="devour">Eat-da-Burger!</button>
        </li>
        {{/unless }}
        {{/each }}
    </ul>
    <h1>Finished Burgers</h1>
    <ul>
        {{#each burgers }}
        {{#unless devoured }}
        <li>
            <p>{{ this.id }}. {{ this.burger_name }}</p><button data-id="{{ this.id }}"
                data-devoured="{{ this.devoured }}" class="devour">Get another one!</button>
        </li>
        {{/if }}
        {{/each }}
    </ul>
    <h2>Get another burger</h2>

    <form class="createForm">
        <div class="formGroup">
            <label for="burgerName">Burger name: </label>
            <input type="text" name="name" id="burg">
        </div>
        <button type="submit">Add new Burger</button>
    </form>